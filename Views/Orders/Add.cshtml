@model IEnumerable<OrderItemViewModel>
@{
    var title = "New order";
    ViewData["Title"] = title;
}

<h2>@title</h2>

<table class="table">
    <thead>
    <tr>
        <th>
            Product name
        </th>
        <th>
            Price
        </th>
        <th>
            Quantity
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr class="item_box">
            <td class="item_name">
                @item.ProductName
            </td>
            <td class="item_price">
                @item.ProductPrice
            </td>
            <td class="item_count">
                <label><input type="text" value="0"/></label>
            </td>
            <td class="add_item" data-id="@item.ProductId">
                <button >Add</button>
            </td>
        </tr>
    }
    </tbody>
</table>

<div class="form-group">
    <input type="submit" value="Show shopping cart" id="show_cart" class="btn btn-default" />
</div>

<div class="form-group">
    <input type="submit" value="Clear shopping cart" id="clear_cart" class="btn btn-default" />
</div>

<div class="form-group">
    <input type="submit" value="Order now" id="order" class="btn btn-default" />
</div>

<div id="cart_content"></div>